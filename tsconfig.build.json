{
  "compilerOptions": {
    "outDir": "./build/es",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "./types"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "src/**/*.test.*", "./build"],
  "include": ["src/**.ts", "src/**.tsx"]
}
